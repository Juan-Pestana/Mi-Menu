<section class='detail-rest'>
     <form class= 'float-right mt-3 mr-3'action="/user/add-favourites/{{_id}}" method='post'>
            <input type='submit' class="btn btn-outline-light" value='Enviar a favoritos'></input>
        </form>

    <article class='info-restaurant '>
        <h1>{{name}}</h1>
        <img src="{{logo}}" alt="logo">
        <hr>
        <div class='box-menu'>
            <h5 class='text-left bg-dark text-light'>Entrantes </h3>
            {{#each dailyMenu.starters}}
            <p class='dish'>{{this.name}}</p>
            {{/each}}

        </div>
        <div class='box-menu'>
            <h5 class='text-left bg-dark text-light'>Principales</h3>
            {{#each dailyMenu.main}}
            <p class='dish'>{{this.name}}</p>
            {{/each}}

        </div>

        <div class='box-menu'>
            <h5 class='text-left bg-dark text-light'>Postres</h3>
            {{#each dailyMenu.dessert}}
            <p class='dish'>{{this.name}}</p>
            {{/each}}

        </div>


        <h3 class='total dish'>Precio {{dailyMenu.price}}â‚¬</h3>
    </article>

    <form class='pedido' action="/user/order/{{_id}}" method="post">
        <div class='d-flex justify-content-around align-items-center bg-light pt-3'>
            <div class="form-group">
            <label  for="pedido">Primero</label>
            <select class="form-control" id="" name="starter">
                {{#each dailyMenu.starters}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label  for="pedido">Para continuar</label>
            <select class="form-control" id="" name="main">
                {{#each dailyMenu.main}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label  for="pedido">Que no falte</label>
            <select class="form-control" id="" name="dessert">
                {{#each dailyMenu.dessert}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        </div>
        

        <p class='mt-3 text-white text-center'>Por solo:</p>
        <input class='valuePrice' type="number" name='price' value="{{dailyMenu.price}}" readonly>
        <button type='submit' class='btn btn-outline-light btn-block mt-3' id='buscar'>Pedir</button>
    </form>


    <article class='info-restaurant2'>

        <hr>
        <div class='rest-info'>

            <p class='dish'>Direccion: <span>{{address}}</span></p>
            <p class='dish'>Telefono: <span>{{phone}}</span></p>
            <p class='dish'>Email: <span>{{email}}</span></p>
            <p class='dish'>Horario: <span>{{opening}}</span></p>

        </div>
       
    </article>

</section>